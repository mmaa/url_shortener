<.simple_form :let={f} for={@changeset} action={~p"/"}>
  <.error :if={@changeset.action}>
    Oops, something went wrong! Please check the errors below.
  </.error>
  <.input field={{f, :url}} type="text" label="URL" autofocus />
  <:actions>
    <.button>Shorten URL</.button>
  </:actions>
</.simple_form>
